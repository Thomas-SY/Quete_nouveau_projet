{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}"><i class="fas fa-undo-alt"></i></a>

    <a href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-edit"></i></a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
